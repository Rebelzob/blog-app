<div class="bg-gray-800 text-white p-4 rounded-lg">
  <h2 class="text-2xl font-bold mb-4">Create new post</h2>
  <%= form_with model: @post, url: user_posts_path(@user), local: true do |form| %>
    <div class="mb-4">
      <%= form.label :title, class: "block text-gray-300 font-bold mb-2" %>
      <%= form.text_field :title, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline bg-gray-200" %>
    </div>
    <div class="mb-4">
      <%= form.label :text, class: "block text-gray-300 font-bold mb-2" %>
      <%= form.text_area :text, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline bg-gray-200" %>
    </div>
    <div>
      <%= form.submit class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    </div>
  <% end %>
</div>
